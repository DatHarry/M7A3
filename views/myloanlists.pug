extends baseTemplate

block content 
  h1 This is dynamic loan list Overview
  div
    table.table-header
      thead
        tr
          th(scope='col') Name
          th(scope='col') Loan Type
          th(scope='col') Loan Number
          th(scope='col') Amount
          th(scope='col') Interest Rate
          th(scope='col') loanTermYears
          th(scope='col') Calculated Loan Amount
      tbody
        each loan in loans
          tr.table-secondary
            td=loan.Name
            td=loan.loanType
            td=loan.loanNumber
            td=loan.Amount
            td=Math.round(loan.interestRate*100)
            td=loan.interestRate
            td=loan.loanTermYears
